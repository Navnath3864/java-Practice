anonymous class use

abstract class Person{
    abstract void eat(); // 
    abstract void speak(); //
    
    public static void main(String[] args) {
        
        Person p=new Person(){ // extends Person
            //body of Anonymous Inner class
            @Override
            void eat(){
                System.out.println("Nice Orange!!");
            }
            @Override
            void speak(){
            System.out.println("English!");    
            }
        }; // AI end
        p.eat();    
        p.speak();
    } // main end
} // class end